<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="146dp"
        android:layout_height="201dp"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:stateListAnimator="@animator/lift_on_touch"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="10dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintStart_toEndOf="@+id/card_view3"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.265">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/cgpaimage"
                android:layout_width="127dp"
                android:layout_height="113dp"
                android:src="@drawable/calculatorlogo"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.633"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.317" />

            <TextView
                android:id="@+id/state2"
                android:layout_width="129dp"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="16dp"
                android:text="CGPA CALCULATOR"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.333"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="146dp"
        android:layout_height="201dp"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:stateListAnimator="@animator/lift_on_touch"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="10dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.261">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/state"
                android:layout_width="143dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:text="QUESTION PAPERS"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.6"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.909" />

            <ImageView
                android:id="@+id/questionpaperimage"
                android:layout_width="124dp"
                android:layout_height="114dp"
                android:src="@drawable/questionlogo"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.314" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="276dp"
        android:layout_height="42dp"
        android:fontFamily="@font/sanfran"
        android:text="Welcome to the Hut!"
        android:textSize="30sp"
        card_view:layout_constraintBottom_toTopOf="@+id/card_view3"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.186" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="19dp"
        android:text="Choose from below. More to come"
        android:textSize="12sp"
        card_view:layout_constraintBottom_toTopOf="@+id/card_view"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView"
        card_view:layout_constraintVertical_bias="0.253" />


</androidx.constraintlayout.widget.ConstraintLayout>